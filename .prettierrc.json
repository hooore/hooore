{
  "plugins": ["prettier-plugin-tailwindcss"],
  "tailwindFunctions": ["cn"],
  "trailingComma": "all",
  "overrides": [
    {
      "files": ["apps/web-v1/**/*"],
      "options": {
        "tailwindConfig": "./apps/web-v1/tailwind.config.ts"
      }
    },
    {
      "files": ["apps/web-v2/**/*"],
      "options": {
        "tailwindConfig": "./apps/web-v2/tailwind.config.ts"
      }
    },
    {
      "files": ["packages/component/**/*"],
      "options": {
        "tailwindConfig": "./packages/component/tailwind.config.ts"
      }
    }
  ]
}
