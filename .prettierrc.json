{
  "plugins": ["prettier-plugin-tailwindcss"],
  "tailwindFunctions": ["cn"],
  "trailingComma": "all",
  "overrides": [
    {
      "files": ["apps/generator/**/*"],
      "options": {
        "tailwindConfig": "./apps/generator/tailwind.config.ts"
      }
    },
    {
      "files": ["apps/dashboard/**/*"],
      "options": {
        "tailwindConfig": "./apps/dashboard/tailwind.config.ts"
      }
    },
    {
      "files": ["packages/components/**/*"],
      "options": {
        "tailwindConfig": "./packages/components/tailwind.config.ts"
      }
    }
  ]
}
